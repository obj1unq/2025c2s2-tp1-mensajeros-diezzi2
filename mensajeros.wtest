import mensajeros.*
describe "Mensajeros - Casos de prueba con Neo y Jean Gray" {
  test "Llevar un paquete no pago con Neo a la Matrix" {
    paquete.estaPago(false)

    assert.notThat(paquete.puedeEntregarse(matrix, neo))
  }
  test "Llevar un paquete pago con Jean a la Matrix" {
    paquete.estaPago(true)

    assert.that(paquete.puedeEntregarse(matrix, jeanGray))
  }
}

describe "Mensajeros - Casos de prueba con Sarah Connor" {

